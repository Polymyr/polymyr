<%= render "products/build/product_progress" %>

<div class="product-build-heading">What questions do you want to ask your users?</div>

<div class="form-wrapper">

	<%= simple_form_for @product, url: wizard_path, method: :put do |f| %>

		<br />

		<div class="product-build-subheading">Context</div>

		<div class="form-inputs">
			<%= f.input :q1, label: false, placeholder: "Question 1" %>
			<%= f.input :q2, label: false, placeholder: "Question 2" %>
			<%= f.input :q3, label: false, placeholder: "Question 3" %>
			<%= f.input :q4, label: false, placeholder: "Question 4" %>
			<%= f.input :q5, label: false, placeholder: "Question 5" %>
		</div>

		<br />

		<div class="product-build-subheading">Setup</div>

		<div class="form-inputs">
			<%= f.input :q6, label: false, placeholder: "Question 1" %>
			<%= f.input :q7, label: false, placeholder: "Question 2" %>
			<%= f.input :q8, label: false, placeholder: "Question 3" %>
			<%= f.input :q9, label: false, placeholder: "Question 4" %>
			<%= f.input :q10, label: false, placeholder: "Question 5" %>
		</div>

		<br />

		<div class="product-build-subheading">Usage</div>

		<div class="form-inputs">
			<%= f.input :q11, label: false, placeholder: "Question 1" %>
			<%= f.input :q12, label: false, placeholder: "Question 2" %>
			<%= f.input :q13, label: false, placeholder: "Question 3" %>
			<%= f.input :q14, label: false, placeholder: "Question 4" %>
			<%= f.input :q15, label: false, placeholder: "Question 5" %>
		</div>

		<br />

		<div class="product-build-subheading">Conclusion</div>

		<div class="form-inputs">
			<%= f.input :q16, label: false, placeholder: "Question 1" %>
			<%= f.input :q17, label: false, placeholder: "Question 2" %>
			<%= f.input :q18, label: false, placeholder: "Question 3" %>
			<%= f.input :q19, label: false, placeholder: "Question 4" %>
			<%= f.input :q20, label: false, placeholder: "Question 5" %>
		</div>

		<div class="form-actions">
	    <%= f.button :submit, "Next" %>
	  </div>
	  <div class="previous-step">
	  	<i class="fa fa-arrow-left" aria-hidden="true"></i><%= link_to "Prev", previous_wizard_path %>
	  </div>
	<% end %>
</div>