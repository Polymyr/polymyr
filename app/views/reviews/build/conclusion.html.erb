<div class="form-wrapper">

	<h2>Conclusion</h2>

	<hr>

	<%= simple_form_for @review, url: wizard_path, method: :put do |f| %>

		<div class="form-inputs">
			<% if !@review.product.q16.blank? %>
				<%= f.input :answer16, label: @review.product.q16, as: :string %>
			<% end %>
			<% if !@review.product.q17.blank? %>
				<%= f.input :answer17, label: @review.product.q17, as: :string %>
			<% end %>
			<% if !@review.product.q18.blank? %>
				<%= f.input :answer18, label: @review.product.q18, as: :string %>
			<% end %>
			<% if !@review.product.q19.blank? %>
				<%= f.input :answer19, label: @review.product.q19, as: :string %>
			<% end %>
			<% if !@review.product.q20.blank? %>
				<%= f.input :answer20, label: @review.product.q20, as: :string %>
			<% end %>
		</div>

		<div class="form-actions">
	    <%= f.button :submit, "Submit Review" %>
	  </div>
	  <div class="previous-step">
	  	<i class="fa fa-arrow-left" aria-hidden="true"></i><%= link_to "Prev", previous_wizard_path %>
	  </div>
	<% end %>
</div>