<div class="form-wrapper">

	<h2>Context</h2>

	<hr>

	<%= simple_form_for @review, url: wizard_path, method: :put do |f| %>

		<div class="form-inputs">
			<% if !@review.product.q1.blank? %>
				<%= f.input :answer1, label: @review.product.q1, as: :string %>
			<% end %>
			<% if !@review.product.q2.blank? %>
				<%= f.input :answer2, label: @review.product.q2, as: :string %>
			<% end %>
			<% if !@review.product.q3.blank? %>
				<%= f.input :answer3, label: @review.product.q3, as: :string %>
			<% end %>
			<% if !@review.product.q4.blank? %>
				<%= f.input :answer4, label: @review.product.q4, as: :string %>
			<% end %>
			<% if !@review.product.q5.blank? %>
				<%= f.input :answer5, label: @review.product.q5, as: :string %>
			<% end %>
		</div>

		<div class="form-actions">
	    <%= f.button :submit, "Next" %>
	  </div>
	  <div class="previous-step">
	  	<i class="fa fa-arrow-left" aria-hidden="true"></i><%= link_to "Prev", previous_wizard_path %>
	  </div>
	<% end %>
</div>