<div class="authentication-wrapper">

	<h2>Request access to launch and test your products</h2>

	<hr>

	<%= simple_form_for(:maker, :url => registration_path(:maker)) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	  	<%= f.input :first_name, required: true, autofocus: true %>
	  	<%= f.input :last_name, required: true %>
	    <%= f.input :email, required: true %>
	    <%= f.input :company, required: true %>
	    <%= f.input :website, required: true %>
	    <%= f.input :password, required: true %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Request access" %>
	  </div>
	<% end %>

	<%= render "makers/shared/links" %>
</div>
